<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/starting_background_img">

    <TextView
        android:id="@+id/stateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:text="Choose State"
        android:layout_marginLeft="7dp"
        android:textColor="@color/black"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/selectStateFragment"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@+id/stateTextView"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="5dp" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/firstFragment"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/selectStateFragment"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="3dp" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/secondFragment"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/firstFragment"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />
</RelativeLayout>