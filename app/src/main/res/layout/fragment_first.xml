<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context=".FirstFragment">

    <Spinner
        android:id="@+id/FirstSpinner"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginEnd="2dp"
        android:dropDownWidth="wrap_content"
        android:minHeight="48dp"
        android:popupBackground="@drawable/starting_background_img"
        android:spinnerMode="dropdown"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/firstEdt_Feet_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:inputType="number"
        android:singleLine="true" />

    <TextView
        android:id="@+id/firstText_Inch_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:gravity="center"
        android:text="in"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/firstEdt_Inch_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:inputType="number"
        android:singleLine="true" />

    <EditText
        android:id="@+id/firstEdt_Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:inputType="number" />


</LinearLayout>